@page "/counter_chatgpt"

<PageTitle>Wordle</PageTitle>

<h1>Wordle</h1>

<div>
    <p>Target Word: @targetWord</p>

    <div>
        @for (int i = 0; i < targetWord.Length; i++)
        {
            char letter = targetWord[i];
            if (guessedLetters.Contains(letter))
            {
                <span>@letter</span>
            }
            else
            {
                <span>_</span>
            }
        }
    </div>

    <div>
        @foreach (var letter in guessedLetters)
        {
            <span>@letter</span>
        }
    </div>

    <div>
        <label for="guessInput">Guess a letter: </label>
        <input id="guessInput" @bind="currentGuess" />
        <button class="btn btn-primary" @onclick="MakeGuess">Submit Guess</button>
    </div>
</div>

@code {
    private string targetWord = "HELLO";
    private string currentGuess = "";
    private List<char> guessedLetters = new List<char>();

    private void MakeGuess()
    {
        if (!string.IsNullOrEmpty(currentGuess) && currentGuess.Length == 1)
        {
            char guessedLetter = char.ToUpper(currentGuess[0]);
            if (!guessedLetters.Contains(guessedLetter))
            {
                guessedLetters.Add(guessedLetter);
            }
        }

        currentGuess = ""; // Clear the input after making a guess
    }
}